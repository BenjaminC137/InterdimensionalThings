@inject InterdimensionalThings.Services.SettingsService settings
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - InterdimensionalThings</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<div class="navBack">
</div>
<body>
    <header>
        <p>&copy; 2018 - InterdimensionalThings</p>
    </header>
    <hr />
    <nav class="navbar fixed-bottom navbar-dark navbar-expand">
        <a class="navbar-custom nav-bottom" asp-controller="Home" asp-action="Index">
            <img src="/images/NeuronLightBlue.png" width="auto" height="30" class="d-inline-block align-top" alt="Neuron">
            Interdimensional Things
        </a>
        <div class="mr-auto"></div>

        <ul class="navbar-nav">
            <li class="nav-item active">
                <div class="nav-block nav-bottom" style="right: 195px">
                    <a class="btn" data-toggle="collapse" href="#collapseLanguage" role="button" aria-expanded="false" aria-controls="collapseLanguage">
                        @settings.SelectedLanguage
                    </a>
                    <div class="collapse" id="collapseLanguage">
                        <div class="card a-inverse">
                            @foreach (var language in settings.Languages)
                            {
                            @if (settings.SelectedLanguage == language)
                            {
                            <a asp-controller="home" asp-action="language" asp-route-id="@language">•@language•</a>
                            }
                            else
                            {
                            <a asp-controller="home" asp-action="language" asp-route-id="@language">@language</a>
                            }
                            }
                        </div>
                    </div>
                </div>
            </li>

            <li class="nav-item active">
                <div class="nav-block nav-bottom" style="right: 115px">

                    <a class="btn" data-toggle="collapse" href="#collapseCurrency" role="button" aria-expanded="false" aria-controls="collapseCurrency">
                        @settings.SelectedCurrency
                    </a>

                    <div class="collapse" id="collapseCurrency">
                        <div class="card a-inverse">
                            @foreach (var currency in settings.Currencies)
                            {
                            @if (settings.SelectedCurrency == currency)
                            {
                            <a asp-controller="home" asp-action="currency" asp-route-id="@currency">•@currency•</a>
                            }
                            else
                            {
                            <a asp-controller="home" asp-action="currency" asp-route-id="@currency">@currency</a>
                            }
                            }
                        </div>
                    </div>
                </div>
            </li>
            <li class="nav-item active">
                <div class="nav-block-thin nav-bottom" style="right: 95px">
                    <a class="btn" asp-controller="Cart" asp-action="index">Cart</a>

                </div>
            </li>

            <li class="nav-item active">
                <div class="nav-block-thin nav-bottom" style="right: 50vw">
                    <a class="btn" asp-controller="Things" asp-action="index">Things</a>
                </div>
            </li>
            <li class="nav-item active">
                <div class="nav-block nav-bottom" style="right: 5px">

                    <a class="btn" data-toggle="collapse" href="#collapseOpen" role="button" aria-expanded="false" aria-controls="collapseOpen">
                        More things
                    </a>

                    <div class="collapse" id="collapseOpen">
                        <div class="card a-inverse">
                            <a class="nav-link" asp-controller="Home" asp-action="index">Home</a>
                            <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                        </div>
                    </div>
                </div>
                </div>
            </li>
        </ul>
</nav>

    <div class="container body-content">
        @RenderBody()
        <footer></footer>
    </div>

    @RenderSection(" Scripts", required: false)

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
